# Dockerfile_blch
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app

WORKDIR /app

# Install minimal system deps
RUN apt-get update \
 && apt-get install -y --no-install-recommends curl \
 && rm -rf /var/lib/apt/lists/*

# Copy requirements and install
COPY requirements.txt /app/requirements.txt
RUN pip install --upgrade pip \
 && pip install -r /app/requirements.txt

# Copy app and scripts into /app
COPY blockchain_backend/ /app/blockchain_backend/
COPY miners/ /app/
COPY docker/entrypoint.sh /app/entrypoint.sh


# Make sure shell scripts use LF line endings and are executable.
# (If you build on Windows Git might check out CRLF; this ensures executable bit.)
RUN chmod +x /app/entrypoint.sh || true


# Create non-root user and set ownership, then switch to it
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 5000

ENTRYPOINT ["/app/entrypoint.sh"]
