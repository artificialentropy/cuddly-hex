FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy blockchain backend
COPY blockchain_backend ./blockchain_backend

# Expose internal Flask port
EXPOSE 5000

# Run Gunicorn with 1 worker, 4 threads, 120s timeout
CMD ["gunicorn", "-b", "0.0.0.0:5000", "blockchain_backend.app:app", "--workers=1", "--threads=4", "--timeout=120"]
